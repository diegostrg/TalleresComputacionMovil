<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <TextView
        android:id="@+id/jugador1texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugador 1 (X)"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jugador1texto"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/boton1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="8dp"
            android:backgroundTint="#3F51B5"
            android:textColor="@color/white"
            android:textSize="42sp" />

        <Button
            android:id="@+id/boton2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:backgroundTint="#3F51B5"
            android:textColor="@color/white"
            android:textSize="42sp"/>

        <Button
            android:id="@+id/boton3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:backgroundTint="#3F51B5"
            android:textColor="@color/white"
            android:textSize="42sp"/>

        <Button
            android:id="@+id/boton4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:backgroundTint="#3F51B5"
            android:textColor="@color/white"
            android:textSize="42sp"/>

        <Button
            android:id="@+id/boton5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:backgroundTint="#3F51B5"
            android:textColor="@color/white"
            android:textSize="42sp"/>

        <Button
            android:id="@+id/boton6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:backgroundTint="#3F51B5"
            android:textColor="@color/white"
            android:textSize="42sp"/>

        <Button
            android:id="@+id/boton7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:backgroundTint="#3F51B5"
            android:textColor="@color/white"
            android:textSize="42sp"/>

        <Button
            android:id="@+id/boton8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:backgroundTint="#3F51B5"
            android:textColor="@color/white"
            android:textSize="42sp" />

        <Button
            android:id="@+id/boton9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:backgroundTint="#3F51B5"
            android:textColor="@color/white"
            android:textSize="42sp"/>
    </GridLayout>

    <TextView
        android:id="@+id/jugador2texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugador 2 (O)"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_below="@+id/grid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/AvisoGanador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jugador2texto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text=""/>

    <Button
        android:id="@+id/botonjuegonuevo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuevo juego :)"
        android:layout_below="@+id/AvisoGanador"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>